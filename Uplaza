unit Uplaza;

{$mode ObjFPC}{$H+}

interface

uses
  dos, Ucoche, SysUtils;

TYPE
  tPlaza = RECORD
    tamanio: boolean; //1 grande y 0 pequenia
    ocupado: boolean;
    coche: tCoche;
  END;

  PROCEDURE PonerPlazaVacia(VAR plaza:tPlaza; aux: integer; aux1: integer);
  PROCEDURE Aparcar(VAR plaza:tPlaza; VAR coche: tCoche);
  PROCEDURE Salir(VAR plaza:tPlaza);


implementation
PROCEDURE PonerPlazaVacia(VAR plaza:tPlaza; aux: integer; aux1: integer);
BEGIN
  plaza.ocupado:= false;

  if (((aux-1)*20+aux1) mod 6 = 0) then
     begin
       plaza.tamanio:= true;
     end
  else
      plaza.tamanio:= false;
END;

PROCEDURE Aparcar(VAR plaza:tPlaza; VAR coche: tCoche);
BEGIN
  plaza.ocupado:= true;
  AsignarCoche(plaza.coche,coche);
END;

PROCEDURE Salir(VAR plaza:tPlaza);
BEGIN
  plaza.ocupado:= false;
END;

end.
